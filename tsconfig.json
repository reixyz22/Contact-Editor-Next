{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "esnext",
    "jsx": "preserve",
    "types": ["@testing-library/jest-dom"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "plugins": [{"name": "next"}
    ],"baseUrl": ".",
    "paths": {
      "@/app/*": ["app/*"],
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./vitest.setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
